@page
@model BookStore.Pages.Categories.IndexModel
@{
}

<div class="container pt-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-primary"><i class="bi bi-pencil-square"></i>&nbsp;Create Book</a>
        </div>
    </div>
</div>

<br /><br />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Categories)
        {
            <tr>
                <td width="50%">@item.Name</td>
                <td width="30%">@item.DisplayOrder</td>
            </tr>
        }
    </tbody>
</table>